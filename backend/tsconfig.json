{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "build",
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"exactOptionalPropertyTypes": true,
		"removeComments": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"types": ["jest"],
		"paths": {
			"@/*": ["src/*"],
			"src/*": ["src/*"]
		}
	},
	"include": ["src", "tests"],
	"exclude": ["tsconfig.json", "node_modules/", "build/", "coverage/"]
}
